<h1>Posts</h1>

<table class="table table-sm table-striped">
  <thead class="table-dark">
    <tr>
      <th>Full name</th>
      <th>Tags</th>
      <th>Wip</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th>Kind</th>
      <th>Comments count</th>
      <th>Tasks count</th>
      <th>Done tasks count</th>
      <th>Stargazers count</th>
      <th>Watchers count</th>
      <th>Star</th>
      <th>Watch</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.full_name, post %></td>
        <td><%= post.tags %></td>
        <td><%= post.wip %></td>
        <td><%= post.created_at %></td>
        <td><%= post.updated_at %></td>
        <td><%= post.kind %></td>
        <td><%= post.comments_count %></td>
        <td><%= post.tasks_count %></td>
        <td><%= post.done_tasks_count %></td>
        <td><%= post.stargazers_count %></td>
        <td><%= post.watchers_count %></td>
        <td><%= post.star %></td>
        <td><%= post.watch %></td>
      </tr>
    <% end %>
  </tbody>
</table>
